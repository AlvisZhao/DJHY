<view class="info">
	<view class="info_title">
		<view
		 wx:for="{{info}}"
		 wx:key="id"
		 class="title_item {{item.isActive?'active':''}}"
		 bindtap="handleItemTap"
		 data-index="{{index}}"
		>
			{{item.value}}
		</view>
	</view>
	<view class="info_content">
		<slot></slot>
	</view>
</view>

